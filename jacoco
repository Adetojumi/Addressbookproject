pipeline {
  agent any
  tools {
    maven 'mymaven' 
  }
  stages {
    stage ('Scan and Build') {
      steps {
      withSonarQubeEnv(installationName: 'sonar', credentialsId: 'jenkins-sonar') {
        sh 'mvn clean package sonar:sonar'
      }
    }
    }
   stage ('deploy') {
      steps {
        sshagent(['ansadmin_jenkins']) {
          sh "scp target/*.war ansadmin@50.19.153.249:/home/ansadmin/tomcat/webapps"
      }
    }  
  }
}
}
